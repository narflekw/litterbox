<div class="user" id="user_<%= user.id %>">
  <div class="name"><%= user.name %></div>
  <div class="email"><%= user.email %></div>
  <div class="actions">
    <%= link_to "view", user_path(user), :id=>"view_user_#{user.id}" %>
    <%= link_to "edit", edit_user_path(user), :id=>"edit_user_#{user.id}" %>
    <%= link_to "delete", user_path(user), :method=>:delete, :id=>"delete_user_#{user.id}" %>
  </div>
</div>

